<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ServerSettingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="允许登录"
            android:textSize="20sp"/>

        <RadioGroup
            android:id="@+id/server_setting_login_allowance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="30dp"
            android:gravity="end"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/allow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开"/>

            <RadioButton
                android:id="@+id/disallow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关"/>

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="允许注册"
            android:textSize="20sp"/>

        <RadioGroup
            android:id="@+id/server_setting_reg_allowance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:gravity="end"
            android:orientation="horizontal">

            <RadioButton
                android:id="@id/allow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开"/>

            <RadioButton
                android:id="@id/disallow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关"/>

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="允许飞花令"
            android:textSize="20sp"/>

        <RadioGroup
            android:id="@+id/server_setting_flying_order_allowance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:gravity="end"
            android:orientation="horizontal">

            <RadioButton
                android:id="@id/allow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开"/>

            <RadioButton
                android:id="@id/disallow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关"/>

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="允许上传"
            android:textSize="20sp"/>

        <RadioGroup
            android:id="@+id/server_setting_upload_allowance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:gravity="end"
            android:orientation="horizontal">

            <RadioButton
                android:id="@id/allow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开"/>

            <RadioButton
                android:id="@id/disallow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关"/>

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="允许评论"
            android:textSize="20sp"/>

        <RadioGroup
            android:id="@+id/server_setting_comment_allowance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:gravity="end"
            android:orientation="horizontal">

            <RadioButton
                android:id="@id/allow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开"/>

            <RadioButton
                android:id="@id/disallow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关"/>

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="允许刷新"
            android:textSize="20sp"/>

        <RadioGroup
            android:id="@+id/server_setting_refresh_allowance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:gravity="end"
            android:orientation="horizontal">

            <RadioButton
                android:id="@id/allow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开"/>

            <RadioButton
                android:id="@id/disallow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关"/>

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="当前连接数"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/server_setting_conclnt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:textSize="20sp"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:text="30"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="最多连接数"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/server_setting_maxclnt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="30"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/server_setting_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:inputType="textPassword"
        android:hint="确认管理员秘钥"/>

    <Button
        android:id="@+id/server_setting_apply"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="确定更改"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:background="@drawable/button_round_corner"
        android:backgroundTint="@color/colorBlue"
        android:layout_gravity="center"/>

</LinearLayout>